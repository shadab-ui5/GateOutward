<mvc:View controllerName="gateout.controller.GateOut"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:upload="sap.m.upload"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:smartMultiInput="sap.ui.comp.smartmultiinput">
    <Page id="page" title="Outward Gate Portal" class="ICTBCustom">
        <f:DynamicPage id="_IDGenDynamicPage2" headerExpanded="{ExpandModel>/headerExpanded}" toggleHeaderOnTitleClick="true" preserveHeaderStateOnScroll="true" headerPinned="true">
            <f:title>
                <f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
                    <f:navigationActions>
                        <Button id="_IDGenButton4" text="Create Gate Out" type="Emphasized" press="onSave"/>
                    </f:navigationActions>
                    <!-- <f:heading>
                        <Title id="_IDGenTitle4" text="Hello title" level="H1"/>
                    </f:heading>
                    <f:expandedContent>
                        <Label id="_IDGenLabel15" text="hello"/>

                    </f:expandedContent>
                    <f:snappedContent>
                        <Label id="_IDGenLabel16" text="hello"/>

                    </f:snappedContent> -->
                </f:DynamicPageTitle>
            </f:title>
            <f:header>
                <f:DynamicPageHeader id="_IDGenDynamicPageHeader21">
                    <f:content>
                        <HBox id="_IDGenHBox1">
                            <VBox id="_IDGenVBox" width="20%">
                                <Label id="_IDGenLabel" text="Plant" required="true"/>

                                <ComboBox id="idDropdownPlant" selectedKey="" width="75%" selectionChange="onSelectPlant" items="{
                                        path: '/',
                                        sorter: { path: 'Plant' }
                                        }">
                                    <core:Item id="_IDGenItem" key="{Plant}" text="{Plant} - {PlantName}"/>
                                </ComboBox>
                            </VBox>
                            <VBox id="_IDGenVBox1" width="20%">
                                <Label id="_IDGenLabel1" text="Category" required="true"/>
                                <ComboBox id="idCategoryDropdown" width="75%" selectedKey="inv" selectionChange="onCategoryChange">
                                    <core:Item id="_IDGenItem1" key="sto" text="STO Invoice No."/>
                                    <core:Item id="_IDGenItem2" key="inv" text="Invoice No"/>
                                    <core:Item id="_IDGenItem3" key="scn" text="Sub Contract Challan No"/>
                                </ComboBox>
                            </VBox>
                            <VBox id="_IDGenVBox2" width="20%">
                                <Label id="idInvoiceLabel" text="Invoice Number" required="true"/>
                                <!-- <Input id="idRAII_DocInvNo" value="" change="onChangeRAII_DocInvNo" liveChange="onLiveChangeInvoiceNo" maxLength="16" width="75%"/> -->
                                <!-- <smartMultiInput:SmartMultiInput id="idRAII_DocInvNo" value="{BillingDocument}" entitySet="billingdocumentf4" showValueHelp="true" width="75%" change="onChangeRAII_DocInvNo"/> -->
                                <MultiInput id="idRAII_DocInvNo" showValueHelp="true" change="onChangeRAII_DocInvNo" liveChange="onLiveChangeInvoiceNo" valueHelpRequest="onValueHelpRequest" width="75%" placeholder="Select..." />

                            </VBox>

                            <VBox id="_IDGenVBox3" width="20%">
                                <Label id="_IDGenLabel2" text="Date"/>
                                <Input id="idRAII_Date" enabled="false" value="" width="75%"/>
                            </VBox>
                            <VBox id="_IDGenVBox4" width="20%">
                                <Label id="_IDGenLabel3" text="Time"/>
                                <Input id="idRAII_Time" enabled="false" value="" width="75%"/>
                            </VBox>
                        </HBox>

                        <HBox id="_IDGenHBox2" class="sapUiTinyMarginTop">
                            <VBox id="_IDGenVBox5" width="20%">
                                <Label id="_IDGenLabel4" text="Vehical Number" required="true"/>
                                <Input id="_IDGenInput" value="{header>/vehicleNumber}" width="75%"/>
                            </VBox>
                            <VBox id="_IDGenVBox6" width="20%">
                                <Label id="_IDGenLabel5" text="Vehical Type" required="true"/>
                                <Input id="_IDGenInput1" value="{header>/vehicleType}" width="75%"/>
                            </VBox>
                            <VBox id="_IDGenVBox7" width="20%">
                                <Label id="_IDGenLabel6" text="Vehical Capacity" required="true"/>
                                <Input id="_IDGenInput2" value="{header>/vehicleCapacity}" width="75%"/>
                            </VBox>
                            <VBox id="_IDGenVBox8" width="20%">
                                <Label id="_IDGenLabel7" text="Transporter Code" required="true"/>
                                <Input id="_IDGenInput3" value="{header>/TransporterCode}" width="75%"/>
                            </VBox>
                        </HBox>
                    </f:content>

                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <VBox id="_IDGenVBox9">
                    <Table id="idTable_RAII" items="{path:'item>/'}" sticky="ColumnHeaders,HeaderToolbar">
                        <columns>
                            <Column id="_IDGenColumn">
                                <Text id="_IDGenText" text="Line Item" />
                            </Column>
                            <Column id="_IDGenColumn1">
                                <Text id="_IDGenText1" text="Sub Challan No" />
                            </Column>
                            <Column id="_IDGenColumn2">
                                <Text id="_IDGenText2" text="Material Code" />
                            </Column>
                            <Column id="_IDGenColumn3">
                                <Text id="_IDGenText3" text="Unit" />
                            </Column>
                            <Column id="_IDGenColumn4">
                                <Text id="_IDGenText4" text="Quantity" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="_IDGenColumnListItem">
                                <cells>
                                    <Text id="_IDGenText5" text="{item>LineItem}"/>
                                    <Text id="_IDGenText6" text="{item>InvoiceNumber}"/>
                                    <Text id="_IDGenText7" text="{item>Material}"/>
                                    <Text id="_IDGenText8" text="{item>UoM}"/>
                                    <Text id="_IDGenText9" text="{item>InvoiceQuantity}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>

                    <VBox id="idVBox_QRCode" visible="false">

                    </VBox>
                </VBox>
            </f:content>
        </f:DynamicPage>
    </Page>
</mvc:View>